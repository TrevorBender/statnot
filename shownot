#!/bin/sh
# A script that echos a string representation of all the current notifications
# as a FIFO queue.
# ex: "[first][second][third].."

notifyString=""
if [ ! -z "$(ls -A ~/.notifications)" ]; then
    declare -a notifications=(~/.notifications/*)
    for notify in "${notifications[@]}" ; do
        it=$(cat $notify)
        notifyString="[$it]$notifyString"
    done
fi
echo $notifyString
